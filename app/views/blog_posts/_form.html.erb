<%= simple_form_for(@blog_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
    <%= tinymce %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
