<div class="all-blog-posts">
	<h1>Blog</h1>
  <% @blog_posts.each do |blog_post| %>
  <div class="post">
    <h2 class="clearfix"><span class="left"><%= link_to blog_post.title, blog_post_url(blog_post) %></span><span class="right">Posted on <%= blog_post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span></h2>
    <p></p>
  </div>
  <% end %>
</div>

<% if current_user %>
	<%= link_to 'New Blog post', new_blog_post_path %>
<% end %>