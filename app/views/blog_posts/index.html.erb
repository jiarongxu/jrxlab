<div class="all-blog-posts">
	<h1>My Articles</h1>
  <% @blog_posts.each do |blog_post| %>
  <div class="post">
    <h2><%= link_to blog_post.title, blog_post_url(blog_post) %></h2>
    <p>Posted on <%= blog_post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
  </div>
  <% end %>
</div>

<% if current_user %>
	<%= link_to 'New Blog post', new_blog_post_path %>
<% end %>